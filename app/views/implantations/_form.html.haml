- content_for :head do
  %script{ :type => "text/javascript", :src => "http://maps.googleapis.com/maps/api/js?sensor=true" }
  = javascript_include_tag "/javascripts/implantation_form.js"

= simple_form_for @implantation do |f|
  = f.error_messages 

  = f.input :site, :hint => 'Entrer le nom du site' 
  = f.input :address,  :hint => 'Entrer une adresse au format google map', :input_html => { :autocomplete => 'off' }
  
  = f.input :latitude, :input_html => { :readonly => true }
  = f.input :longitude, :input_html => { :readonly => true }
  = f.input :street_address, :input_html => { :readonly => true }
  = f.input :administrative_area_level_1, :input_html => { :readonly => true }
  %br
  = f.input :administrative_area_level_2, :input_html => { :readonly => true }
  %br
  = f.input :administrative_area_level_3, :input_html => { :readonly => true }
  %br
  = f.input :postal_code, :input_html => { :readonly => true }
  = f.input :locality, :input_html => { :readonly => true }
  = f.input :country, :input_html => { :readonly => true }, :as => :string
  
  = f.input :cabinet_id, :as => :hidden
    
  = f.submit 
